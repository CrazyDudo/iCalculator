.calculator {
  display: flex;
  flex-direction: column;
  height: 100vh;
  transition: all 0.3s ease;
}

.calculator.dark {
  background-color: #000000;
}

.calculator.light {
  background-color: #ffffff;
}

.display {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  padding: 20px;
  font-size: 48px;
  transition: all 0.3s ease;
}

.dark .display {
  color: #ffffff;
}

.light .display {
  color: #000000;
}

.keypad {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
}

.btn {
  flex: 1;
  padding: 20px;
  font-size: 24px;
  /* border: 1px solid #cccccc; */
  text-align: center;
  transition: all 0.3s ease;
}

.dark .btn {
  background-color: #333333;
  color: #ffffff;
}

.light .btn {
  background-color: #f0f0f0;
  color: #000000;
}

.btn.operator {
  background-color: #ff9500;
}

.btn.function {
  background-color: #a5a5a5;
}

.dark .btn.function {
  color: #000000;
}

.light .btn.function {
  color: #ffffff;
}

.btn.equal {
  flex: 1;
}