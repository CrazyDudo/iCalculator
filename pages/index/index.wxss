.calculator {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #000000;
}

.display {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  padding: 20px;
  font-size: 48px;
  color: #ffffff;
}

.keypad {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
}

.btn {
  flex: 1;
  padding: 20px;
  font-size: 24px;
  border: 1px solid #333333;
  background-color: #333333;
  color: #ffffff;
  text-align: center;
}

.btn.operator {
  background-color: #ff9500;
}

.btn.function {
  background-color: #a5a5a5;
  color: #000000;
}

.btn.equal {
  background-color: #ff9500;
  flex: 1;
}